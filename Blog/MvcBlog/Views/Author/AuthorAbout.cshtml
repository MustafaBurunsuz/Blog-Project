@model IEnumerable<EntityLayer.Concrete.Blog>
@foreach (var item in Model)
{
    <div class="sidebar-box">
        <div class="bio text-center">
            <img src="@item.Authors.AuthorImage" alt="Image Placeholder" class="img-fluid mb-5">
            <div class="bio-body">
                <h2>@item.Authors.AuthorName</h2>
                <p class="mb-4">@item.Authors.AuthorAbout</p>
                <p><a href="#" class="btn btn-primary btn-sm rounded px-4 py-2">Diğer Yazılarım</a></p>
            </div>
        </div>
    </div>


}