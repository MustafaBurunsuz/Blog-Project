@model IEnumerable<EntityLayer.Concrete.Author>

<div class="tab-pane" id="settings">
    @foreach (var item in Model)
    {


    <form class="form-horizontal">

        <div class="form-group row">

            <label for="inputName" class="col-sm-2 col-form-label">Ad Soyad</label>

            <div class="col-sm-10">

                <input type="email" class="form-control" id="inputName" value="@item.AuthorName">

            </div>

        </div>

        <div class="form-group row">

            <label for="inputEmail" class="col-sm-2 col-form-label">Email</label>

            <div class="col-sm-10">

                <input type="email" class="form-control" id="inputEmail" value="@item.Mail">

            </div>

        </div>

        <div class="form-group row">

            <label for="inputName2" class="col-sm-2 col-form-label">Meslek</label>

            <div class="col-sm-10">

                <input type="text" class="form-control" id="inputName2" value="@item.Title">

            </div>

        </div>

        <div class="form-group row">

            <label for="inputExperience" class="col-sm-2 col-form-label">Yetenekler</label>

            <div class="col-sm-10">

                <input type="text" class="form-control" id="inputName2" value="@item.AboutShort">

            </div>

        </div>

        <div class="form-group row">

            <label for="inputSkills" class="col-sm-2 col-form-label">Telefon </label>

            <div class="col-sm-10">

                <input type="text" class="form-control" id="inputSkills" value="@item.PhoneNumber">

            </div>

        </div>
        <div class="form-group row">

            <label for="inputSkills" class="col-sm-2 col-form-label">Fotoğraf </label>

            <div class="col-sm-10">

                <input type="text" class="form-control" id="inputSkills" value="@item.AuthorImage">

            </div>

        </div>
        <div class="form-group row">

            <label for="inputSkills" class="col-sm-2 col-form-label">Hakkında </label>

            <div class="col-sm-10">

                <input type="text" class="form-control" id="inputSkills" value="@item.AuthorAbout">
                

            </div>

        </div>
        <div class="form-group row">

            <label for="inputSkills" class="col-sm-2 col-form-label">Şifre </label>

            <div class="col-sm-10">

                <input type="text" class="form-control" id="inputSkills" value="@item.Password">

            </div>

        </div>
        <div class="form-group row">

            <label for="inputSkills" class="col-sm-2 col-form-label">Şifre Tekrar </label>

            <div class="col-sm-10">

                <input type="text" class="form-control" id="inputSkills" >

            </div>

        </div>

        <div class="form-group row">

            <div class="offset-sm-2 col-sm-10">

                <div class="checkbox">

                    <label>

                        <input type="checkbox"> <a href="#">Şifremi Değiştirmek İstiyorum</a>

                    </label>

                </div>

            </div>

        </div>

        <div class="form-group row">

            <div class="offset-sm-2 col-sm-10">

                <button type="submit" class="btn btn-danger">Güncelle</button>

            </div>

        </div>

    </form>
    }


</div>